<%- include('../includes/head') %>

<body>
    <main>
        <div id="home-section" class="row col-md-12">
            <div id="menu-section" class="col-md-6">

            </div>
            <div id="login-section" class="col-md-6">
                <h2>Student Online Residential Booking</h2>
                <h3>Student Login</h3>
                <form id="login" <% if (pageTitle == 'Student login') { %> action="/" <%} else {%> action="/register"
                    <% } %> method="post">
                    <%if (pageTitle == 'Student login') {%>
                    <h3 id="form-title">Log in</h3>
                    <input type="text" name="studentId" id="studentId" placeholder="Enter student ID">
                    <input type="password" name="studentPin" id="studentPin" placeholder="Enter student PIN">
                    <button type="submit">Log in</button>
                    <div id="register-link">
                        <p>Don't have an account?</p><a href="/register">Register here</a>
                        <a href="/admin/">Log in as admin</a>
                    </div>
                    <%} else {%>
                    <h3 id="form-title">Sign up</h3>
                    <input type="text" name="studentRegisterName" id="studentRegisterName"
                        placeholder="Enter your name">
                    <input type="text" name="studentRegisterId" id="studentRegisterId"
                        placeholder="Enter your student ID">
                    <input type="password" name="studentRegisterPin" id="studentRegisterPin"
                        placeholder="Enter student PIN">
                    <button type="submit">Register</button>
                    <div id="register-link">
                        <p>Already have an account?</p><a href="/">Log in here</a>
                    </div>
                    <% } %>
                </form>
            </div>
        </div>
    </main>
</body>
<%- include('../includes/end') %>